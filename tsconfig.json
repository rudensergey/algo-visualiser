{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "rootDirs": ["src"],
    "paths": {
      "@shared/*": ["./src/components/_shared/*"],
      "@templates/*": ["./src/components/_templates/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "exclude": ["node_modules"]
}
